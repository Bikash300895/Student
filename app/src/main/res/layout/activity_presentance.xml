<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wallblue"
    tools:context=".Presentance">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t1"
            android:text="Subject 1"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />


        <Button
            android:onClick="absentButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="-"
            android:id="@+id/absent1" />

        <TextView
            android:id="@+id/t1p"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:text="0%"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:text="+"
            android:onClick="presentButton"
            android:id="@+id/present1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/count_1"
            android:text="0/0"
            android:paddingRight="5dp"
            android:paddingLeft="30dp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>